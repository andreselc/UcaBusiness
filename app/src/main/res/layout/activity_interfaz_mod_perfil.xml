<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InterfazModPerfil">

    <TextView
            android:text="Modificar Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView23"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="35dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3" app:layout_constraintGuide_begin="104dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="383dp"
            android:layout_height="358dp"
            android:background="#4CAF50" android:id="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="103dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" android:layout_marginEnd="14dp" app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTextPhone"
                app:layout_constraintTop_toTopOf="@+id/textView26"
                android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/textView27"
                android:layout_marginStart="6dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editTextTextPostalAddress"
                app:layout_constraintTop_toTopOf="@+id/textView24"
                android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="@+id/textView24"
                android:layout_marginStart="6dp"/>
        <Switch
                android:text="PÃºblico  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/switch2"
                app:layout_constraintTop_toTopOf="@+id/textView27"
                android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="@+id/textView27"
                android:layout_marginStart="6dp"/>
        <Spinner
                android:layout_width="146dp"
                android:layout_height="26dp" android:id="@+id/spinner"
                android:layout_marginTop="19dp" app:layout_constraintTop_toTopOf="@+id/textView28"
                app:layout_constraintStart_toStartOf="@+id/textView28"
                android:layout_marginStart="6dp" android:entries="@array/edadSpinner"/>
        <TextView
                android:text="Visibilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView27"
                android:textSize="14sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/editTextPhone" android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="@+id/guideline6"/>
        <TextView
                android:text="@string/direcci_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView24"
                android:textSize="14sp" android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginTop="38dp"/>
        <TextView
                android:text="Datos de Contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView26"
                android:textSize="14sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/editTextTextPostalAddress" android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="@+id/guideline6"/>
        <TextView
                android:text="Edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView28"
                android:textSize="14sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/switch2" android:layout_marginTop="27dp"
                app:layout_constraintStart_toStartOf="@+id/guideline6"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline6"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_begin="10dp"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline8"
                                                    app:layout_constraintGuide_begin="39dp"
                                                    android:orientation="horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5" app:layout_constraintGuide_begin="395dp"
                                                android:orientation="vertical"/>
    <Button
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:layout_marginTop="380dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.094"
            android:onClick="buttonPressModificar"/>
</androidx.constraintlayout.widget.ConstraintLayout>