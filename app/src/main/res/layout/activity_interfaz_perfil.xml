<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InterfazPerfil">

    <TextView
            android:text="@string/perfil_del_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="378dp"
            android:layout_height="344dp"
            android:background="#4CAF50" android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.268"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.484">

        <TextView
                android:text="@string/correo_electr_nico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                android:textSize="16sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.12"
                app:layout_constraintStart_toStartOf="@+id/textView15"
        />
        <TextView
                android:text="@string/correo"
                android:layout_width="353dp"
                android:layout_height="21dp" android:id="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                android:layout_marginTop="21dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        />
        <TextView
                android:text="@string/direcci_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                android:textSize="16sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="@+id/textView17"
        />
        <TextView
                android:text="@string/dir_solo_visible_si_es_empresa"
                android:layout_width="357dp"
                android:layout_height="51dp" android:id="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                android:layout_marginTop="21dp" app:layout_constraintStart_toStartOf="@+id/textView14"
        />
        <TextView
                android:text="Link de Whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/textView15" android:layout_marginTop="72dp"
                app:layout_constraintStart_toStartOf="@+id/textView19"
        />
        <TextView
                android:text="link"
                android:layout_width="354dp"
                android:layout_height="20dp" android:id="@+id/textView18"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView17" android:layout_marginTop="20dp"
        />
        <TextView
                android:text="Datos de Contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView19"
                android:textSize="16sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/textView17" android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"/>
        <TextView
                android:text="contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView18"/>
        <TextView
                android:text="Visibilidad de precios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView21"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.044"/>
        <TextView
                android:text="visibilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView22"
                app:layout_constraintTop_toTopOf="@+id/textView21"
                android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="@+id/textView21"
                android:layout_marginStart="3dp"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline7" app:layout_constraintGuide_begin="39dp"
                                                    android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline4"
                                                    app:layout_constraintGuide_begin="10dp"
                                                    android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="MODIFICAR PERFIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button7"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            android:layout_marginTop="368dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.125"
            android:onClick="buttonPressModificar"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="104dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>